{
  "name": "autoland-gh-action",
  "version": "0.1.1",
  "private": true,
  "description": "Merge PRs automatically when their depending commits or PRs have been merged into other repositories",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run test && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xarantolus/action-autoland.git"
  },
  "keywords": [
    "actions",
    "pull request",
    "auto merge"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/github": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^16.11.11",
    "@typescript-eslint/parser": "^5.5.0",
    "@vercel/ncc": "^0.31.1",
    "eslint": "^7.31.0",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-jest": "^25.3.0",
    "jest": "^27.4.3",
    "js-yaml": "^4.1.0",
    "prettier": "2.5.0",
    "ts-jest": "^27.0.3",
    "typescript": "^4.4.3"
  }
}
